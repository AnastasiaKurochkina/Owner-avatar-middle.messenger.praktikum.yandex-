# Корневой файл EditorConfig
root = true

# Для всех файлов используем unix-совместимые переносы строк
[*]
end_of_line = lf
insert_final_newline = true

[**.{js,ts}]
charset = utf-8
indent_style = space
indent_size = 2

# Только для файлов package.json 
[package.json]
indent_style = space
indent_size = 2
