<div class="profile">
    {{{ButtonComeback onClick=onGoMessages}}}
    <!-- Режим просмотра профиля -->
    <div class="user-info">
        <div class="user-info__detail">
            {{{UserAvatar img=user.avatar}}}
            <div class="user-info__name">{{user.first_name}}</div>
        </div>
        <form>
            {{{ ProfileInput name="email" type="text" label="Почта" value=user.email disabled=true}}}
            {{{ ProfileInput name="login" type="text" label="Логин" value=user.login disabled=true}}}
            {{{ ProfileInput name="first_name" type="text" label="Имя" value=user.first_name disabled=true}}}
            {{{ ProfileInput name="second_name" type="text" label="Фамилия" value=user.second_name disabled=true}}}
            {{{ ProfileInput name="display_name" type="text" label="Имя в чате" value=user.display_name disabled=true}}}
            {{{ ProfileInput name="phone" type="text" label="Телефон" value=user.phone disabled=true}}}

        </form>
        <div class="profile-button">
            {{{ Button
            label="Изменить данные"
            type="second"
            onClick=goProfileEdit
            }}}
            {{{ Button
            label="Изменить пароль"
            type="second"
            onClick=goProfilePasswordEdit
            }}}
            {{{ Button
            label="Выйти"
            type="second"
            className="danger"
            onClick=logout
            }}}
        </div>
    </div>

    <!-- Режим загрузки файла аватарки -->
    {{!-- {{#if isAvatarDownload}} --}}
    {{!-- {{#Modal open=isAvatarDownload}}
    <form method="dialog">
        <span class="input-file-container">Выбрать файл на компьютере
            {{{Input className="input-file" name="avatar" type="file" placeholder="Выбрать файл на компьютере"}}}
        </span>
        {{{ Button label="Поменять" type="primary"}}}
    </form>
    {{/Modal}} --}}
    {{!-- {{/if}} --}}

</div>
